<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#E7FEFE"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".Vista.VistaRegistro.RegistroCitas">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        app:srcCompat="@drawable/registro" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="516dp"
        android:layout_margin="15dp"
        android:background="#FDF1F1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:padding="15dp"
            android:text="Registro de Cita"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:padding="6dp"
            android:text="Nombres Compltos:"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrar Nombres y Apllellifos completos"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Correo Electronico:"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese el correo"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:padding="6dp"
            android:text="N° Celular:"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese el número de celular" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:padding="6dp"
            android:text="Fecha:"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese el dia de registro" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Hora:"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingrese la Hora" />

        <Button
            android:id="@+id/button2"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>