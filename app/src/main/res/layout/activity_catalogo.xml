<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo5"
    android:layout_height="match_parent"
    tools:context=".Vista.VistaCatalogo.Catalogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvt_volver"
            android:layout_width="71dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_volver"
            android:fontFamily="cursive"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="5dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Catalogo"
            android:textColor="@color/black"
            android:textSize="50dp" />

    </LinearLayout>




    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="222dp"
            android:layout_height="match_parent"

            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="124dp"
                    android:background="@drawable/fondo4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Corte Juvenil para Dama"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="308dp"
                        android:layout_height="88dp"
                        android:background="@drawable/fondo6"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_registro"
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/corte1" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Corte para Dama para la estciÃ³n de verano."
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>


                />
            </androidx.cardview.widget.CardView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="124dp"
                    android:background="@drawable/fondo4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Corte para Matrimonio - Dama"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="312dp"
                        android:layout_height="88dp"
                        android:gravity="center"
                        android:background="@drawable/fondo6"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_citas"
                            android:layout_width="77dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/corte2" />

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Corte de estilo fresco para Damas que estan a putno de casarse."
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>


                />
            </androidx.cardview.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="124dp"
                    android:background="@drawable/fondo4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Corte de cabello para Caballero"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="311dp"
                        android:layout_height="88dp"
                        android:gravity="center"
                        android:background="@drawable/fondo6"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_logo_cita"
                            android:layout_width="72dp"
                            android:layout_height="75dp"
                            android:layout_margin="8dp"
                            app:srcCompat="@drawable/corte3" />

                        <TextView
                            android:id="@+id/textView51"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Corte de cabello para caballeros que quieran combinar su barba con su peinado."
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>


                />
            </androidx.cardview.widget.CardView>
        </TableRow>

    </TableLayout>


</LinearLayout>