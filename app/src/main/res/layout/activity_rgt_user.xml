<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"

    android:background="#FFFF7D"
    tools:context=".Vista.VistaLogin.VistaLogin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE USUARIOS"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="581dp"
        android:layout_margin="20dp"
        android:background="#BCEEFF"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="232dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/user" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Registre un Correo Email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_usuario"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nombre completo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_usuario"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Registre un Nombre de Usuario"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/txt_clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_key"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Cree su Clave"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_registro_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Registrar Usuario" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/tvt_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            app:srcCompat="@drawable/ic_volver" />


    </LinearLayout>



</LinearLayout>